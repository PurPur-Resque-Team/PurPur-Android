<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:background="#00000000"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dialog_quiz_cl_background"
            android:layout_width="420dp"
            android:layout_height="300dp"
            android:background="@drawable/bg_mission_background_dialog_quiz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dialog_quiz_iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginRight="18dp"
                android:src="@drawable/btn_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dialog_quiz_tv_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="43dp"
                android:fontFamily="@font/font_bmjua"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="1sp"
                android:text="오"
                android:textColor="#3c3535"
                android:textSize="32sp"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_tv_second"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dialog_quiz_tv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_bmjua"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="1sp"
                android:text="삼"
                android:textColor="#3c3535"
                android:textSize="32sp"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_tv_third"
                app:layout_constraintStart_toEndOf="@+id/dialog_quiz_tv_first"
                app:layout_constraintTop_toTopOf="@id/dialog_quiz_tv_first" />

            <TextView
                android:id="@+id/dialog_quiz_tv_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_bmjua"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="1sp"
                android:text="일"
                android:textColor="#3c3535"
                android:textSize="32sp"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_tv_fourth"
                app:layout_constraintStart_toEndOf="@+id/dialog_quiz_tv_second"
                app:layout_constraintTop_toTopOf="@id/dialog_quiz_tv_first" />

            <TextView
                android:id="@+id/dialog_quiz_tv_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:fontFamily="@font/font_bmjua"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="1sp"
                android:text="사"
                android:textColor="#3c3535"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dialog_quiz_tv_third"
                app:layout_constraintTop_toTopOf="@id/dialog_quiz_tv_first" />


            <TextView
                android:id="@+id/dialog_quiz_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/font_bmjua"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="9sp"
                android:text="부모님만 위의 숫자를 순서대로 눌러주세요."
                android:textColor="#5d5757"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_tv_first" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/btn_check_zero"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_iv_btn_one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_tv_desc" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/btn_check_one"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_iv_btn_two"
                app:layout_constraintStart_toEndOf="@id/dialog_quiz_iv_btn_zero"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_tv_desc" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/btn_check_two"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_iv_btn_three"
                app:layout_constraintStart_toEndOf="@id/dialog_quiz_iv_btn_one"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_tv_desc" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@drawable/btn_check_three"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_iv_btn_four"
                app:layout_constraintStart_toEndOf="@id/dialog_quiz_iv_btn_two"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_tv_desc" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/btn_check_four"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dialog_quiz_iv_btn_three"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_tv_desc" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/btn_check_five"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_iv_btn_one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_iv_btn_zero" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/btn_check_six"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_iv_btn_two"
                app:layout_constraintStart_toEndOf="@id/dialog_quiz_iv_btn_zero"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_iv_btn_zero" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/btn_check_seven"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_iv_btn_three"
                app:layout_constraintStart_toEndOf="@id/dialog_quiz_iv_btn_one"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_iv_btn_zero" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/btn_check_eight"
                app:layout_constraintEnd_toStartOf="@id/dialog_quiz_iv_btn_four"
                app:layout_constraintStart_toEndOf="@id/dialog_quiz_iv_btn_two"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_iv_btn_zero" />

            <ImageView
                android:id="@+id/dialog_quiz_iv_btn_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="50dp"
                android:src="@drawable/btn_check_nine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dialog_quiz_iv_btn_three"
                app:layout_constraintTop_toBottomOf="@id/dialog_quiz_iv_btn_zero" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>